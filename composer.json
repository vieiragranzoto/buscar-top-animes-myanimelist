{
    "name": "renan/php-composer",
    "description": "Projeto que busca cursos",
    "type": "library",
    "autoload": {
        "classmap": [
            "./Teste.php"
        ],
        "files": [
            "./functions.php"
        ],
        "psr-4": {
            "Renan\\PhpComposer\\": "src/"
        }
    },
    "authors": [
        {
            "name": "renangranzoto",
            "email": "renangranzoto@gmail.com"
        }
    ],
    "require": {
        "symfony/dom-crawler": "^6.0",
        "guzzlehttp/guzzle": "^7.4",
        "symfony/css-selector": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^5.3"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 src/Buscador.php",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs"
        ],
        "ls": "dir",
        "emtrar-pasta": "cd c:\\Users\\Renan\\Documents\\Projetos\\PHPComposer",
        "limpar-cache": "rd /Q cache",
        "excluir-cache": [
            "@emtrar-pasta",
            "@limpar-cache"
        ],
        "listar-anime": "php buscador-de-curso.php",
        "pre-update-cmd": [
            "@check"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as verificações do código. PHAN e PHPCS",
        "cs": "Verifica se o código segue o padrão de boas praticas.",
        "phan": "Faz uma analise sintatica do código."
    }
}
